# Patent Partners Assistant - Environment Configuration
# 
# Copy this file to .env and customize as needed.
# All settings have sensible defaults and are optional.

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="Patent Partners Assistant"
APP_VERSION="0.1.0"
DEBUG=true
LOG_LEVEL="INFO"

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_PATH="./data/processed/patents.db"
DB_BACKUP_PATH="./data/processed/backups/"

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
LLM_MODEL="mistral:latest"
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
OLLAMA_BASE_URL="http://localhost:11434"

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=1

# ============================================================================
# UI CONFIGURATION
# ============================================================================
STREAMLIT_PORT=8501
STREAMLIT_HOST="localhost"

# ============================================================================
# PRIVACY & SECURITY
# ============================================================================
OFFLINE=true

# ============================================================================
# EXPORT CONFIGURATION
# ============================================================================
EXPORT_PATH="./data/exports/"
MAX_EXPORT_SIZE="50MB"
